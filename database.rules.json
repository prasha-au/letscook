{
  "rules": {
    "user": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": false
      }
    },
    "recipe": {
      ".read": true,
      ".write": false
    },
    "recipe_metadata": {
      ".read": true,
      ".write": false
    },
    "parse_request": {
      ".read": true,
      "$id": {
        ".write": "!data.exists()",
        "url": { ".validate": true },
        "$other": { ".validate": false }
      }
    }
  }
}
